RUN apt-get -y update
RUN apt-get -y install -y \
  ubuntu-desktop \
  openssh-server \
  curl \
  vim \
  git \
  xrdp

ARG USER_UID=1000
ARG USER_USER=test
ARG USER_PASSWORD=testtest
ã€€RUN useradd -m --uid ${USER_UID} --groups sudo ${USER_USER} \
  && echo ${USER_USER}:${USER_PASSWORD} | chpasswd

